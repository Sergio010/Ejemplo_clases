
#include <iostream>
#include <string>

using namespace std;

float sumar(float num1, float num2); // prototipo de la funcion

int main(int argc, char const *argv[])
{
	// Este comentario de linea
	/*
	* Comentarios de varias lineas
	*/

	int edad = 23;  // variables de tipo entero
	float temperatura = 12.3;  // variable real de precision simple
	double pi = 3.14161674657464756; // variable real de doble precision 

	const float numEuler = 2.3456;  // constantes 

	// Operadores aritmeticos : +, -, *, /, %

	float suma = 21.5 + 4; // suma de dos valores 
	int valor;
	cout<<" Ingrese un valor: \n";	// impresion por pantalla
	cin>>suma>>valor;    // lectura de teclado

	// Operadores relacionales: <, >, <=, >=
	cout<<" Resultado: "<<(suma>valor)<<"\n";

	// Operadores logicos: &&, ||, ~

	// Bloques condicionales
	if(5>2){
		cout<<" 5 es mayor que dos\n";
	}
	else{
		if(5<4){
			cout<<" 5 es mayor que 4\n";
		}
	}
	
	// Bloques Iterativos
	int cont=0;
	while(cont < 10){
		cout<<"cont = "<<cont<<"\n";
		cont=cont+1; // cont++
	}

	for (int i = 0; i < 10; ++i)
	{
		cout<<" for: "<<i<<"\n";
	}

	cout<<" La suma de 34+102 = "<<sumar(34,102)<<"\n";

	int vector[10]; // vector[0], vector[1],....,vector[9]
	int matriz[4][10]; // matriz[0][1][4]



	return 0;
}

float sumar(float num1, float num2){

	return num1+num2;
}
